    "glossary": {
      "terms": [
        {
          "term": "FMEA (Failure Modes and Effects Analysis)",
          "definition": "A structured method for identifying potential failure modes, their causes and effects, and prioritizing actions."
        },
        {
          "term": "FMECA (Failure Modes, Effects and Criticality Analysis)",
          "definition": "An extension of FMEA that includes criticality assessment."
        },
        {
          "term": "Function",
          "definition": "What the system or component is intended to do under defined conditions."
        },
        {
          "term": "Failure Mode",
          "definition": "The manner in which a function can fail (e.g. leakage, seizure, no output)."
        },
        {
          "term": "Failure Cause",
          "definition": "The underlying reason why a failure mode occurs (wear, corrosion, overload)."
        },
        {
          "term": "Failure Effect",
          "definition": "The consequence of a failure at component, system, or end-user level."
        },
        {
          "term": "Severity (S)",
          "definition": "The seriousness of the effect of the failure."
        },
        {
          "term": "Occurrence (O)",
          "definition": "The likelihood that a failure cause will occur."
        },
        {
          "term": "Detection (D)",
          "definition": "The likelihood that a failure will be detected before the effect occurs."
        },
        {
          "term": "Control",
          "definition": "Existing measures that prevent, detect, or mitigate failures."
        },
        {
          "term": "RPN",
          "definition": "Risk Priority Number = S × O × D."
        }
      ]
    },
    "standards": {
      "sod_scales": {
        "severity": [
          {
            "range": "10",
            "meaning": "Hazardous, safety or regulatory violation"
          },
          {
